(ocamllex (jsonlex lexer xmlLexer))

(library
 ((name links)
  (public_name links)
  (synopsis "Links compiler library")
  (wrapped false)
  (modes (native))
  (flags (:standard -safe-string -dtypes -w Ae-44-45-60 -g -cclib -lunix -thread))
