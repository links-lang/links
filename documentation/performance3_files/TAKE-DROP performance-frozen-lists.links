fun clear(ctx) {
	jsClearRect(ctx, 0.0, 0.0, jsCanvasWidth(ctx), jsCanvasHeight(ctx))
}

fun putPixel(ctx, x:Float, y:Float) {
	jsFillRect(ctx, x, y, 2.0, 2.0);
	#jsFillCircle(ctx, x, y, 1.0);
}

