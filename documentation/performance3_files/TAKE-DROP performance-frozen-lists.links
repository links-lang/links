fun lsZip(l, r) {
	switch (l) {
		case Nil -> Nil
		case Cn(x, xs) ->
			switch (r) {
				case Nil -> Nil
				case Cn(y, ys) -> Cn((x, y), lsZip(xs, ys))
			}
	}
}

