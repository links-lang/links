#
# LISTS
#

typename Ls(a) = mu l . [| Nil | Cn: (a, l) |];

var testList = Cn(1, Cn(2, Nil));
var tTestList = tCn(1, tCn(2, tNil)); # t is for turbo

fun lsLength(l) {
	fun lsLengthHelper(l, n) {
		switch (l) {
			case Nil -> n
			case Cn(_, xs) -> lsLengthHelper(xs, n + 1)
		}
	}
	lsLengthHelper(l, 0)
}

fun lsHead(l) {
	switch (l) {
		case Nil -> error("Can't get a head of an empty list!")
		case Cn(x, _) -> x
	}
}

fun lsTail(l) {
	switch (l) {
		case Nil -> error("Can't get a tail of an empty list!")
		case Cn(_, xs) -> xs
	}
}

fun lsLast(l) {
	switch (l) {
		case Nil -> error("Can't get the last element of an empty list!")
		case Cn(x, Nil) -> x
		case Cn(hd, tl) -> lsLast(tl)
	}
}

fun lsIndex(l, i) {
	fun lsIndexHelper(l, i, j) {
		switch (l) {
			case Nil -> error("Can't index an empty list!")
			case Cn(x, xs) ->
				if (i == j) x
				else lsIndexHelper(l, i, j + 1)
		}
	}
	if (i < lsLength(l))
		lsIndexHelper(l, i, 0)
	else error("Index out of bounds!")
}

fun lsAppend(l, r) {
	switch (l) {
		case Nil -> r
		case Cn(x, xs) -> Cn(x, lsAppend(xs, r))
	}
}

fun lsMap(f, l) {
    switch (l) {
		case Nil -> Nil
		case Cn(x, xs) -> Cn(f(x), lsMap(f, xs))
    }
}

fun lsMapIgnore(f, l) {
    switch (l) {
		case Nil -> ()
		case Cn(x, xs) -> ignore(f(x)); lsMapIgnore(f, xs); () 
    }
}

fun lsConcatMap(f, l) {
  switch (l) {
    case Nil -> Nil
    case Cn(hd, tl) -> lsAppend(f(hd), lsConcatMap(f, tl))
  }
}

fun lsRange(a, b) {
	if (a < b) Cn(a, lsRange(a + 1, b))
	else Nil
}

fun lsFilter(p, l) {
  lsConcatMap (fun (x) { if (p(x)) Cn(x, Nil) else Nil }, l)
}

fun lsFilter2(p, l) {
	switch (l) {
		case Nil -> Nil
		case Cn(x, xs) ->
			if (p(x)) Cn(x, lsFilter2(p, xs))
			else lsFilter2(p, xs)
	}
}

fun lsTakeWhile(p, l) {
    switch (l) {
		case Nil -> Nil
		case Cn(x, xs) ->
			if (p(x)) Cn(x, lsTakeWhile(p, xs))
			else Nil
    }
}

