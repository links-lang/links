# MATH
#
sig fabs: (Float) -> Float
fun fabs(x) {
	if (x < 0.0) -.x else x
}

sig fmin: (Float, Float) -> Float
fun fmin(a, b) {
	if (a < b) a
	else b
}

sig fmax: (Float, Float) -> Float
fun fmax(a, b) {
	if (a > b) a
	else b
}

