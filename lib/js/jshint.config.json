{
    // Environment options
    "browser": true,
    "devel": true,

    // Enforcing options
    "esversion": 6,
    "forin": true,
    "freeze": true,
    "strict": "global",
    "varstmt": true,
    "trailing": true,

    // Relaxing options
    "asi": false,
    "evil": true,
    "laxbreak": true,
    "smarttabs": false,

    // Global variables whitelist
    "globals": {
        "_$K": false,
        "_initVars": false,
        "_jsonState": false,
        "cgiEnv": true,
        "DEBUGGING": false,
        "escape": false,
        "event": true,
        "length": true,
        "print": true,
        "unescape": false
    }
}
