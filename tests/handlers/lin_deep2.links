var ch = fork(fun(ch) {
    var ch = send(42, ch);
    close(ch)
});

handle({
  ignore(ldo LL);
  var (i, ch) = receive(ch);
  println("Int: " ^^ intToString(i));
  close(ch)
}) {
  case Return(_) -> ()
  case LL(resume) -> {
    var (i, ch) = receive(ch);
    println("Int: " ^^ intToString(i));
    close(ch);
    resume(())
  }
}