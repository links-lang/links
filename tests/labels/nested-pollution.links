            case <`A(x) => k> -> k (2*x)
        }
    }

    sig double : (Int) {`A:(Int) => Int|e}-> Int
    fun double (x) { do `A(x) }

    sig times_two : (Int) -> Comp(Int, {`A{_}|_})
    fun times_two (x) { h_a ( fun () { double(x) } ) }

    sig times_two' : (Int) {`A{_}|_}~> Int
